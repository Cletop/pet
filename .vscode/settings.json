{
	"files.eol": "\n",
	"editor.codeActionsOnSave": {
		"source.fixAll": true
	},
	"html.autoClosingTags": true, // auto close tags
	"html.autoCreateQuotes": true,
	"editor.linkedEditing": true,
	"editor.rulers": [80],
	"cSpell.words": [
		"dcloudio",
		"fundebug",
		"linebreak",
		"stylelint",
		"swiper",
		"tencent",
		"uni",
		"weixin"
	], // auto rename linked tags

	// close vetur ts.js validation
	// use default prettier-vscode
	"vetur.validation.script": false
}
